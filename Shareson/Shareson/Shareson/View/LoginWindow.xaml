<Window x:Class="Shareson.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Models="clr-namespace:Shareson.ViewModel"
        xmlns:Views="clr-namespace:Shareson.View.ViewControls"
        xmlns:local="clr-namespace:Shareson.View"
        mc:Ignorable="d"
        Title="LoginPanel" Height="300" Width="450">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CustomControls/Button1.xaml"/>
                <!--<ResourceDictionary Source="/CustomControls/Button2.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type Models:AccountControlViewModel}">
                <Views:AccountControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type Models:OptionsControlViewModel}">
                <Views:OptionsControl/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type Models:ContactControlViewModel}">
                <Views:ContactControl/>
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="3">
            <ContentControl Content="{Binding LoginWindowContentControl, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Background="#003B53" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal">
            <Button Content="Log In"  Command="{Binding CallAccountPage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource Button1}" Width="120" Margin="20,0,0,0"/>
            <Button Content="Options" Command="{Binding CallOptionsPage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource Button1}" Width="120" Margin="20,0,0,0"/>
            <Button Content="Contact" Command="{Binding CallContactPage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource Button1}" Width="120" Margin="20,0,0,0"/>
        </StackPanel>
       
    </Grid>
</Window>
