<UserControl x:Class="Shareson.View.ViewControls.ImageInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1024">

    <Grid Background="White" MaxHeight="620" MaxWidth="1024">
        <ScrollViewer>
            <Image Source="{Binding FileInfoModel.BMapImage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </ScrollViewer>
        
    </Grid>
</UserControl>
